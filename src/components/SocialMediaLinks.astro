---
const madeWithLinks = [
    {
        url: "https://www.instagram.com/",
        label: "Instagram",
        icon: "ri-instagram-fill",
    },
    {
        url: "https://github.com/vito8916",
        label: "Github",
        icon: "ri-github-fill",
    },
    {
        url: "https://www.youtube.com",
        label: "Youtube",
        icon: "ri-youtube-fill",
    },
];
---

<nav class="social-nav">
    {
        madeWithLinks.map((link) => (
            <a
                href={link.url}
                title={link.label}
                target="_blank"
                rel="noopener noreferrer"
            >
                <i class:list={["social-icon", link.icon]}></i> 
            </a>
        ))
    }
</nav>

<style>
    .social-nav {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        padding: 0px;
        margin-bottom: 2rem;
        gap: 16px;
    }

    .social-nav a {
        width: 32px;
        height: 32px;
        display: flex;
        text-decoration: none;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        background-color: #f6f6f6;
    }
    .social-icon {
        color: #555555;
    }

    @media screen and (min-width: 767px) {
        .social-nav {
        margin-bottom: 0;
    }
    }
</style>
