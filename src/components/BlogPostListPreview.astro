---
// library imports
import { Image } from '@astrojs/image/components';
import ButtonOutline from "./ButtonOutline.astro";

const { data, url } = Astro.props;
const { title, pubDate, author, image, description, category, thumb, link } = data;
---

<article class="blog__post-list-preview">
    <a class="" href={`/blog/${url}`}>
        <div class="post__thumb-img">
            <Image
                    src={thumb.src}
                    alt={thumb.alt}
                    width="201"
                    height="320"
                    format="webp"
                    fit="cover"
                    quality={100}
                    aspectRatio="16:9"
            />
        </div>
        <div class="post__info">
            <time class="post__date" datetime={pubDate}>
                {
                    new Date(pubDate).toLocaleDateString("en-us", {
                        year: "numeric",
                        month: "short",
                        day: "numeric",
                    })
                }
            </time>
            <h2 class="post__title">
                {title}
            </h2>
            <p class="post__description">
                {description}
            </p>
            <ButtonOutline title="Read More" link={`/blog/${url}`} />
        </div>
    </a>
</article>

<style>
    a {
        text-decoration: none;
    }
    .blog__post-list-preview {
        display: grid;
        grid-template-columns: 201px 1.5fr;
        align-items: center;
        /*grid-template-columns: repeat(auto-fill, minmax(310px, 1fr));*/
        /* align-items: center; */
        padding: 24px 0;
        gap: 24px;
    }
    .post__thumb-img {
        width: 100%;
        height: 320px;
        border: 1px solid var(--border-book-color);
        border-radius: 4px;
    }
    .post__thumb-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }
    .post__info {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0;
        gap: 12px;
    }

    .post__info .post__date {
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        color: var(--color-text);
    }

    .post__info .post__title {
        font-style: normal;
        font-weight: 700;
        font-size: 27px;
        color: var(--color-text);
        margin: 0;
    }

    .post__info .post__description {
        font-style: normal;
        font-weight: 400;
        font-size: clamp(1rem, 1.1rem,1.33rem);
        color: var(--color-text);
        margin: 0;
    }

    @media (max-width: 768px) {
        .blog__post-list-preview {
            grid-template-columns: 1fr;
        }
        .post__thumb-img {
            width: 160px;
            height: 240px;
            border: 1px solid var(--border-book-color);
            border-radius: 4px;
        }
    }
</style>
