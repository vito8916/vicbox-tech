---
import ButtonOutline from "./ButtonOutline.astro";

const { thumb, date, title, description, link } = Astro.props;
---

<article class="blog__post-list-preview">
    <div class="post__thumb-img">
        <img src={thumb} alt={`Illustrative image to the blog post: ${title}`}/>
    </div>
    <div class="post__info">
        <time class="post__date" datetime={date}>
            {
                new Date(date).toLocaleDateString("en-us", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                })
            }
        </time>
        <h2 class="post__title">
            {title}
        </h2>
        <p class="post__description">
            {description}
        </p>
        <ButtonOutline title="Read More" link={link} />
    </div>
</article>

<style>
    .blog__post-list-preview {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        align-items: center;
        /*grid-template-columns: repeat(auto-fill, minmax(310px, 1fr));*/
        /* align-items: center; */
        padding: 24px 0px;
        gap: 24px;
    }
    .post__thumb-img {
        width: 100%;
        height: 280px;
    }
    .post__thumb-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(1);
    }
    .post__info {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        padding: 0px;
        gap: 12px;
    }

    .post__info .post__date {
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        color: #555555;
    }

    .post__info .post__title {
        font-style: normal;
        font-weight: 700;
        font-size: 27px;
        color: #555555;
        margin: 0;
    }

    .post__info .post__description {
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        color: #555555;
        margin: 0;
    }

    @media (max-width: 768px) {
        .blog__post-list-preview {
            grid-template-columns: 1fr;
        }
    }
</style>
