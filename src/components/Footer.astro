---
import SocialMediaLinks from "./SocialMediaLinks.astro";
const today = new Date();
const menu = [
    {
        title: "Astro",
        path: "https://astro.build/",
    },
    {
        title: "GitHub",
        path: "https://github.com/",
    },
    {
        title: "Netlify",
        path: "https://netlifyjs.com/",
    },
];
---

<footer>
    <div class="container">
        <img
            class="footer__logo color"
            src="/images/vicbox_tech _logo_yellow.svg"
            alt="Logotipo of the VicBox.Tech Blog"
            width="70"
        />
        <section>
            <nav>
                <ul role='list'>
                    {
                        menu.map((link) => (
                            <li>
                                <a
                                    href={link.path}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    {link.title}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </nav>
        </section>
        <div class="divider"></div>
        <div class="copyright">
            &copy; {today.getFullYear()} Victor Alvarado. All rights reserved.
        </div>
        <SocialMediaLinks />
    </div>
</footer>

<style>
    footer {
        width: 100%;
        position: relative;
        bottom: 0;
        background-color: #ffffff;
        text-align: center;
        padding: 64px 0px;
    }
    .footer__logo {
        margin-bottom: 1rem;
    }
     
    footer .divider {
        width: 100%;
        height: 0.47px;
        margin: 1rem 0;
        background: #0f0f0f;
        opacity: 0.2;
    }

    footer .copyright {
        margin-bottom: 1.5rem;
    }
</style>
