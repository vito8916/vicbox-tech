---
import SocialMediaLinks from "./SocialMediaLinks.astro";
import Isotipo from "./Isotipo.astro";
import Logo from "./Logo.astro";
import Brand from "./Brand.astro";
const today = new Date();
const menu = [
    {
        title: "Astro",
        path: "https://astro.build/",
    },
    {
        title: "GitHub",
        path: "https://github.com/",
    },
    {
        title: "Netlify",
        path: "https://netlifyjs.com/",
    },
];
---

<footer>
    <div class="container">
        <div class="footer__logo">
            <Brand />
        </div>
        <section>
            <nav>
                <ul class="stack--list" role="list">
                    {
                        menu.map((link) => (
                            <li class="footer-menu__item">
                                <a
                                    href={link.path}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    {link.title}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </nav>
        </section>
        <div class="divider"></div>
        <div class="copyright">
            &copy; {today.getFullYear()} Victor Alvarado. All rights reserved.
        </div>
        <SocialMediaLinks />
    </div>
</footer>

<style>
    footer {
        width: 100%;
        position: relative;
        bottom: 0;
        background-color: var(--footer-background-color);
        text-align: center;
        padding: 64px 0;
    }
    .footer__logo {
        display: flex;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .footer-menu__item a{
        color: var(--color-text);
    }

    footer .divider {
        width: 100%;
        height: 0.47px;
        margin: 1rem 0;
        background: #0f0f0f;
        opacity: 0.2;
    }

    footer .copyright {
        color: var(--color-text);
        margin-bottom: 1.5rem;
    }

    .stack--list {
        display: flex;
        justify-content: center;
        align-items: center;
        line-height: 1.2;
    }
</style>
