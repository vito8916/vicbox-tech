---
const { tags, url, title } = Astro.props;
---

<div class="muted card flex">
    <svg
        width="45"
        height="45"
        viewBox="0 0 720 720"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M691.649 348.453L367.926 26.3079C360.879 19.2956 349.482 19.3235 342.47 26.3701L20.3242 350.094C13.312 357.14 13.3398 368.537 20.3864 375.55L344.11 697.695C351.157 704.707 362.554 704.68 369.566 697.633L691.712 373.909C698.724 366.863 698.696 355.466 691.649 348.453Z"
            fill="#3A3A3A"></path>
        <path
            d="M367.922 26.3043L534.774 192.343L368.736 359.195C361.731 366.234 350.319 366.262 343.28 359.257L176.428 193.219L342.467 26.3665C349.471 19.3278 360.884 19.2999 367.922 26.3043Z"
            fill="#FBD144"></path>
    </svg>
    <div>
        <a class="card-header" href={url}>
            {title}
        </a>
    </div>
</div>

<style>
    .card {
        display: flex;
        gap: 1rem;
        background: var(--code);
        border-radius: var(--border-radius);
        padding: 1rem;
        position: relative;
    }
    .card.muted {
        align-items: center;
        background: transparent;
        border: 2px solid var(--border-color);
        padding: 1rem;
    }

    .card svg {
        filter: grayscale(1);
        position: relative;
        overflow: hidden;
        display: inline-block;
        width: 45px;
        height: 45px;
    }
    .card a.card-header,
    .card h2 {
        border: 0;
        color: var(--color-text);
        display: block;
        font-size: 1.1rem;
        font-weight: 700;
        line-height: 1.3;
        margin: 0.25rem 0 0.5rem;
        padding: 0;
        text-decoration: none;
    }
</style>
