---

import {Image} from "@astrojs/image/components";

const { imgSrc, imgAtl } = Astro.props;

---

<div class="blog__post-preview">
    <Image
            src={imgSrc}
            alt={imgAtl}
            width="200"
            height="319"
            format="webp"
            fit="cover"
            quality={100}
    />
</div>

<style>

    .blog__post-preview {
        position: relative;
        width: 100%;
        height: 319px;
        border: 1px solid var(--border-book-color);
        border-radius: 4px;
    }

    .blog__post-preview img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 4px;
    }

    .blog__post-preview::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background: linear-gradient(0deg, rgba(81, 81, 81, 0.2), rgba(81, 81, 81, 0.2));
        z-index: 1;
    }

    .blog__post-preview:before {
        content: ' ';
        width: 6px;
        height: 100%;
        left: 0;
        top: 0;
        position: absolute;
        background-image: url("data:image/svg+xml,%0A%3Csvg width='6' height='150' viewBox='0 0 6 150' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Crect width='6' height='150' fill='url(%23paint0_linear)'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear' x1='6' y1='61.5234' x2='-9.54301e-06' y2='61.5315' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='white' stop-opacity='0'/%3E%3Cstop offset='0.139111' stop-color='white' stop-opacity='0.2'/%3E%3Cstop offset='0.290477' stop-opacity='0.18'/%3E%3Cstop offset='0.726819' stop-color='%23D8D8D8' stop-opacity='0.273181'/%3E%3Cstop offset='0.839352' stop-opacity='0.15'/%3E%3Cstop offset='1' stop-opacity='0.19'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E%0A");
        z-index: 1;
    }
    @media (max-width: 768px) {
        .blog__post-preview {
            width: 151px;
            height: 240px;
            border: 1px solid var(--border-book-color);
            border-radius: 4px;
        }
    }
</style>