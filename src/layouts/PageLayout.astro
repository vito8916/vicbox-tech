---
import BaseHead from '../components/BaseHead.astro';
import BottomNavigationMenu from "../components/BottomNavigationMenu.astro";
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';
const {currentPage} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body>
        <BottomNavigationMenu current={currentPage} title={SITE_TITLE} />
        <!-- <Header current={currentPage} title={SITE_TITLE} /> -->
        <main>
            <div class="container">
                <slot/>
            </div>
        </main>
    </body>
    <Footer />
</html>

<script>
    // Get the current theme from local storage
    const currentTheme = localStorage.getItem("theme");

    // If the current local storage doesn't exit, set it to light
    if (currentTheme === null) {
        // Set the body data-theme attribute to match the local storage item
        document.documentElement.setAttribute("data-theme", "light");
    }
</script>